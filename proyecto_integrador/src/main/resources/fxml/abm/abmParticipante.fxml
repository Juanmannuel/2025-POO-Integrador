<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.app_eventos.controllers.ABMParticipanteController">

    <!-- CONTENIDO PRINCIPAL -->
    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">

        <!-- T铆tulo y bot贸n alineado a la derecha -->
        <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Gesti贸n de Participantes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Panel contenedor con filtros + tabla + paginaci贸n -->
        <VBox spacing="15" styleClass="panel-contenedor" VBox.vgrow="ALWAYS">

            <!-- FILTROS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Evento:"/>
                <ComboBox fx:id="comboEventoFiltro" promptText="Seleccionar evento" prefWidth="200"/>
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombreFiltro" promptText="Buscar por nombre" prefWidth="120"/>
                <Label text="DNI:"/>
                <TextField fx:id="txtDNIFiltro" promptText="Buscar por DNI" prefWidth="120"/>
                <Button text=" Actualizar" onAction="#actualizarLista" styleClass="btn-actualizar"/>
            </HBox>

            <!-- TABLA -->
            <TableView fx:id="tablaParticipantes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colEvento" text="Evento" />
                    <TableColumn fx:id="colNombre" text="Participante" />
                    <TableColumn fx:id="colDNI" text="DNI" />
                    <TableColumn fx:id="colTelefono" text="Tel茅fono" />
                    <TableColumn fx:id="colEmail" text="Email" />
                    <TableColumn fx:id="colEstadoEvento" text="Estado Evento" />
                </columns>
            </TableView>

            <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button text="Inscribir" onAction="#mostrarModalInscribir" styleClass="btn-nuevo-agregar"/>
                <Button text="Des-inscribir" onAction="#desinscribirParticipante" styleClass="btn-eliminar"/>
                <Button text="Ver Detalles" onAction="#verDetallesParticipante" styleClass="btn-modificar"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- VENTANA MODAL NUEVO PARTICIPANTE -->
    <StackPane fx:id="modalOverlay" visible="false" styleClass="modal-overlay">
            <VBox spacing="15" styleClass="modal-contenido" maxWidth="620" maxHeight="450">
                <Label text="Inscribir Participante" styleClass="modal-titulo"/>
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>
                    <Label text="Evento" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="comboEvento" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Label text="Participante" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="comboParticipante" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Label text="Informaci贸n del Evento:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <VBox GridPane.rowIndex="2" GridPane.columnIndex="1" spacing="5">
                        <Label fx:id="lblEstadoEvento" text="Estado: -" />
                        <Label fx:id="lblTipoEvento" text="Tipo: -" />
                        <Label fx:id="lblCupoDisponible" text="Cupo: -" />
                        <Label fx:id="lblFechaEvento" text="Fecha: -" />
                    </VBox>
                    
                    <Label text="Informaci贸n del Participante:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <VBox GridPane.rowIndex="3" GridPane.columnIndex="1" spacing="5">
                        <Label fx:id="lblNombreParticipante" text="Nombre: -" />
                        <Label fx:id="lblDniParticipante" text="DNI: -" />
                        <Label fx:id="lblTelefonoParticipante" text="Tel茅fono: -" />
                        <Label fx:id="lblEmailParticipante" text="Email: -" />
                    </VBox>
                </GridPane>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Cancelar" onAction="#cerrarModal" styleClass="btn-cancelar"/>
                    <Button text="Inscribir" onAction="#inscribirParticipante" styleClass="btn-guardar"/>
                </HBox>
            </VBox>
        </StackPane>

        <!-- MODAL DETALLES -->
        <StackPane fx:id="modalDetallesOverlay" visible="false" styleClass="modal-overlay">
            <VBox spacing="15" styleClass="modal-contenido" maxWidth="550" maxHeight="400">
                <Label text="Detalles de Participaci贸n" styleClass="modal-titulo"/>
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35"/>
                        <ColumnConstraints percentWidth="65"/>
                    </columnConstraints>
                    <Label text="Evento:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="lblDetalleEvento" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Participante:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="lblDetalleParticipante" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Estado del Evento:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="lblDetalleEstado" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Label text="Tipo de Evento:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="lblDetalleTipo" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    
                    <Label text="Fecha/Hora:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <Label fx:id="lblDetalleFecha" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    
                    <Label text="Informaci贸n Adicional:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextArea fx:id="txtDetalleInfo" GridPane.rowIndex="5" GridPane.columnIndex="1" 
                            prefRowCount="3" editable="false" wrapText="true"/>
                </GridPane>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Cerrar" onAction="#cerrarModalDetalles" styleClass="btn-cancelar"/>
                </HBox>
            </VBox>
        </StackPane>
</StackPane>