<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.app_eventos.utils.TimePicker?>

<StackPane xmlns="http://javafx.com/javafx/21.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.app_eventos.controllers.ABMEventoController">

    <!-- CONTENIDO PRINCIPAL -->
    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">

        <!-- Título y botón alineado a la derecha -->
        <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Gestión de Eventos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Panel contenedor con filtros + tabla + paginación -->
        <VBox spacing="15" styleClass="panel-contenedor" VBox.vgrow="ALWAYS">

            <!-- FILTROS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tipo:"/>
                <ComboBox fx:id="comboTipoEventoFiltro" promptText="Todos" prefWidth="120"/>
                <Label text="Estado:"/>
                <ComboBox promptText="Todos" prefWidth="120"/>
                <Label text="Fecha desde:"/>
                <DatePicker/>
                <Label text="Fecha hasta:"/>
                <DatePicker/>
            </HBox>

            <!-- TABLA -->
            <TableView fx:id="tablaEventos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colTipo" text="Tipo"/>
                    <TableColumn fx:id="colFechaInicio" text="Fecha y Hora Inicio"/>
                    <TableColumn fx:id="colFechaFin" text="Fecha y Hora Fin"/>
                    <TableColumn fx:id="colEstado" text="Estado"/>
                    <TableColumn fx:id="colResponsables" text="Responsables"/>
                    <TableColumn fx:id="colAcciones" text="Acciones"/>
                </columns>
            </TableView>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button text="Alta" onAction="#mostrarModal" styleClass="btn-alta" />
                <Button text="Modificar" styleClass="btn-modificar" onAction="#modificarEvento" />
                <Button text="Baja" styleClass="btn-baja" onAction="#eliminarEvento"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- VENTANA MODAL NUEVO EVENTO -->
    <StackPane fx:id="modalOverlay" visible="false" styleClass="modal-overlay">
        <VBox spacing="20" styleClass="modal-contenido" maxWidth="620" maxHeight="450">
            <Label text="Nuevo Evento" styleClass="modal-titulo" />

            <!-- Scroll con formulario libre -->
            <ScrollPane fitToWidth="true" styleClass="modal-scroll">
                <content>
                    <!-- Grid de 2 columnas (50/50) -->
                    <GridPane hgap="20" vgap="12" style="-fx-padding: 10;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                        </columnConstraints>

                        <!-- Fila 0: Nombre / Tipo -->
                        <Label text="Nombre del Evento" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label text="Tipo de Evento" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <TextField fx:id="txtNombre" promptText="Ingrese el nombre del Evento"
                                maxWidth="Infinity" GridPane.hgrow="ALWAYS"
                                GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboTipoEvento" promptText="Seleccione un tipo"
                                maxWidth="Infinity" GridPane.hgrow="ALWAYS"
                                GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Fila 2: Fechas -->
                        <Label text="Fecha de Inicio" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label text="Fecha de Fin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <DatePicker fx:id="dateInicio" maxWidth="Infinity" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateFin" maxWidth="Infinity" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Fila 4: Horarios -->
                        <Label text="Hora de Inicio" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label text="Hora de Fin" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <TimePicker fx:id="timePickerInicio" 
                                   GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TimePicker fx:id="timePickerFin" 
                                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <!-- Fila 6: Estado (A TODO EL ANCHO) -->
                        <Label text="Estado" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboEstado" promptText="Seleccione un estado" maxWidth="Infinity" GridPane.hgrow="ALWAYS"
                                GridPane.rowIndex="7" GridPane.columnIndex="0"/>

                        <!-- Fila 8: Fragmento dinámico (A TODO EL ANCHO) -->
                        <Pane fx:id="seccionDinamica"
                            GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
                            maxWidth="Infinity" GridPane.hgrow="ALWAYS" />
                    </GridPane>
                </content>
            </ScrollPane>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancelar" onAction="#cerrarModal" styleClass="btn-cancelar" />
                <Button text="Guardar" onAction="#guardarEvento" styleClass="btn-guardar" />
            </HBox>
        </VBox>
    </StackPane>
</StackPane>
