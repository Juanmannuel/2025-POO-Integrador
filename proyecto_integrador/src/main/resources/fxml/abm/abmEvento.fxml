<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.app_eventos.controllers.ABMEventoController">

    <!-- CONTENIDO PRINCIPAL -->
    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">

        <!-- Título y botón alineado a la derecha -->
        <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Gestión de Eventos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Panel contenedor con filtros + tabla + paginación -->
        <VBox spacing="15" styleClass="panel-contenedor" VBox.vgrow="ALWAYS">

            <!-- FILTROS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tipo:"/>
                <ComboBox fx:id="comboTipoEventoFiltro" promptText="Todos" prefWidth="120"/>
                <Label text="Estado:"/>
                <ComboBox promptText="Todos" prefWidth="120"/>
                <Label text="Fecha desde:"/>
                <DatePicker/>
                <Label text="Fecha hasta:"/>
                <DatePicker/>
            </HBox>

            <!-- TABLA -->
            <TableView fx:id="tablaEventos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colTipo" text="Tipo"/>
                    <TableColumn fx:id="colFechaInicio" text="Fecha y Hora Inicio"/>
                    <TableColumn fx:id="colFechaFin" text="Fecha y Hora Fin"/>
                    <TableColumn fx:id="colEstado" text="Estado"/>
                    <TableColumn fx:id="colResponsables" text="Responsables"/>
                    <TableColumn fx:id="colAcciones" text="Acciones"/>
                </columns>
            </TableView>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button text="Alta" onAction="#mostrarModal" styleClass="btn-alta" />
                <Button text="Modificar" styleClass="btn-modificar" onAction="#modificarEvento" />
                <Button text="Baja" styleClass="btn-baja" />
            </HBox>
        </VBox>
    </VBox>

    <!-- VENTANA MODAL NUEVO EVENTO -->
    <StackPane fx:id="modalOverlay" visible="false" styleClass="modal-overlay">
        <VBox spacing="20" styleClass="modal-contenido" maxWidth="620" maxHeight="450">
            <Label text="Nuevo Evento" styleClass="modal-titulo" />

            <!-- Scroll con formulario libre -->
            <ScrollPane fitToWidth="true" styleClass="modal-scroll">
                <content>
                    <VBox spacing="20" style="-fx-padding: 10;">
                        
                        <!-- Nombre y Tipo -->
                        <HBox spacing="20">
                            <VBox spacing="5">
                                <Label text="Nombre del Evento" />
                                <TextField fx:id="txtNombre" promptText="Ingrese el nombre del Evento" prefWidth="250"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="Tipo de Evento" />
                                <ComboBox fx:id="comboTipoEvento" promptText="Seleccione un tipo" prefWidth="250"/>
                            </VBox>
                        </HBox>

                        <!-- Fechas -->
                        <HBox spacing="20">
                            <VBox spacing="5">
                                <Label text="Fecha de Inicio" />
                                <DatePicker fx:id="dateInicio" prefWidth="250"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="Fecha de Fin" />
                                <DatePicker fx:id="dateFin" prefWidth="250"/>
                            </VBox>
                        </HBox>

                        <!-- Horarios -->
                        <HBox spacing="20">
                            <VBox spacing="5">
                                <Label text="Hora de Inicio" />
                                <Spinner fx:id="spinnerHoraInicio" prefWidth="250"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="Hora de Fin" />
                                <Spinner fx:id="spinnerHoraFin" prefWidth="250"/>
                            </VBox>
                        </HBox>

                        <!-- Estado -->
                        <VBox spacing="5">
                            <Label text="Estado" />
                            <ComboBox fx:id="comboEstado" promptText="Seleccione un estado" prefWidth="250"/>
                        </VBox>

                        <!-- Fragmento dinámico -->
                        <Pane fx:id="seccionDinamica" />

                    </VBox>
                </content>
            </ScrollPane>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancelar" onAction="#cerrarModal" styleClass="btn-cancelar" />
                <Button text="Guardar" onAction="#guardarEvento" styleClass="btn-guardar" />
            </HBox>
        </VBox>
    </StackPane>
</StackPane>
