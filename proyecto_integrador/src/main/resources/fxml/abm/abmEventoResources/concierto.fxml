<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app_eventos.controllers.ConciertoController">

    <Label text="Datos específicos de Concierto" style="-fx-font-weight: bold;" />

    <GridPane>
        <!-- Contenedor horizontal para Cupo Máximo y Tipo de Entrada -->
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Cupo Máximo" />
                <Spinner fx:id="spinnerCupoMaximo" prefWidth="250"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Tipo de Entrada" />
                <ComboBox fx:id="comboTipoEntradaConcierto" promptText="Seleccione una opción" prefWidth="250"/>
            </VBox>
        </HBox>
    </GridPane>
</VBox>