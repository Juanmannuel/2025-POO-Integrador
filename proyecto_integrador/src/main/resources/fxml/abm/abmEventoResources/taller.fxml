<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app_eventos.controllers.TallerController">

    <Label text="Datos específicos de Taller" style="-fx-font-weight: bold;" />

    <GridPane>
        <!-- Cupo máximo y modalidad-->
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Cupo máximo"/>
                <Spinner fx:id="spinnerCupoMaximo" prefWidth="250"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Modalidad" />
                <ComboBox fx:id="comboModalidad" promptText="Seleccione una modalidad" prefWidth="250"/>
            </VBox>
        </HBox>
    </GridPane>
</VBox>
