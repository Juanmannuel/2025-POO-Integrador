<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.app_eventos.controllers.ABMPersonaController">

    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">

        <!-- TÃ­tulo -->
        <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="ðŸ‘¥GestiÃ³n de Personas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Filtros -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rol"/>
            <ComboBox fx:id="comboTipoRolFiltro" promptText="Todos" prefWidth="120"/>
            <Label text="Nombre:"/>
            <TextField fx:id="txtNombreFiltro" promptText="Buscar por nombre" prefWidth="120"/>
            <Label text="DNI:"/>
            <TextField fx:id="txtDNIFiltro" promptText="Buscar por DNI" prefWidth="120"/>
        </HBox>

        <!-- Tabla -->
        <TableView fx:id="tablaPersonas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                <TableColumn fx:id="colDNI" text="DNI" prefWidth="100"/>
                <TableColumn fx:id="colTelefono" text="TelÃ©fono" prefWidth="120"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="100"/>
                <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
            </columns>
        </TableView>

        <!-- Botones debajo de la tabla -->
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Agregar" onAction="#mostrarModal" styleClass="btn-agregar"/>
            <Button text="Modificar" onAction="#mostrarModal" styleClass="btn-modificar"/>
            <Button text="Eliminar" onAction="#guardarPersona" styleClass="btn-eliminar"/>
        </HBox>

        <!-- Paginador -->
        <HBox alignment="CENTER_RIGHT">
            <Pagination fx:id="paginador" pageCount="3"/>
        </HBox>
    </VBox>

    <!-- MODAL -->
    <StackPane fx:id="modalOverlay" visible="false" styleClass="modal-overlay">
        <VBox spacing="15" styleClass="modal-contenido" maxWidth="620" maxHeight="350">
            <Label text="Nueva Persona" styleClass="modal-titulo"/>
            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                <Label text="DNI" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDNI" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Nombre" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Apellido" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApellido" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="TelÃ©fono" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Email" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="Rol" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboRol" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancelar" onAction="#cerrarModal" styleClass="btn-cancelar"/>
                <Button text="Guardar" onAction="#guardarPersona" styleClass="btn-guardar"/>
            </HBox>
        </VBox>
    </StackPane>
</StackPane>