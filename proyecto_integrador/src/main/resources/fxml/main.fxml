<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app_eventos.controllers.MainController">

    <!--> Menú lateral -->
    <left>
        <VBox fx:id="menuLateral" spacing="10" styleClass="sidebar">
            <Label text="Menú" style="-fx-text-fill: white; -fx-font-size: 20px;" />
            <Button text="Inicio" styleClass="sidebar-button selected" />
            <Button fx:id="btnEventos" text="Eventos" onAction="#mostrarEventos" styleClass="sidebar-button" />
            <Button text="Participantes" styleClass="sidebar-button" />
            <Button text="Personas" styleClass="sidebar-button" />
        </VBox>
    </left>

    <!-- Encabezado superior -->
    <top>
        <HBox fx:id="encabezado" alignment="CENTER_RIGHT" spacing="10" styleClass="header-bar">
            <Label fx:id="fechaLabel" />
            <Label text="Admin" />
        </HBox>
    </top>

    <!-- Contenido dinámico -->
    <center>
        <StackPane fx:id="contenidoCentral" />
    </center>

</BorderPane>
