<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app_eventos.controllers.MainController">
    <center>
        <HBox>
            <!-- Menú lateral completo -->
            <VBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-pref-width: 200;">
                <Label text="Menú" style="-fx-text-fill: white; -fx-font-size: 20px;" />
                <Button text="Calendario" style="-fx-pref-width: 150px;" />
                <Button fx:id="btnEventos" text="Eventos" onAction="#mostrarEventos" style="-fx-pref-width: 150px;" />
                <Button text="Participantes" style="-fx-pref-width: 150px;" />
                <Button text="Personas" style="-fx-pref-width: 150px;" />
            </VBox>

            <!-- Contenedor vertical con encabezado y contenido dinámico -->
            <VBox fx:id="mainContainer" style="-fx-background-color: #ecf0f1;" spacing="0" VBox.vgrow="ALWAYS">
                <!-- Encabezado superior -->
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
                    <Label fx:id="fechaLabel" style="-fx-font-size: 14px;" />
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="Admin" />
                    </HBox>
                </HBox>

                <!-- Contenido dinámico -->
                <StackPane fx:id="contenidoCentral" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
